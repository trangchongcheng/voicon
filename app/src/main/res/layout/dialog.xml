<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="250dp">
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/ll"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_ver"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgVer"
        android:gravity="center"
        android:scaleType="fitCenter" />
    <TextView

        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/server_status_bar"
        android:text="Đã chụp ảnh màn  thành công!"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <Button
        android:layout_below="@+id/ll"
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/config_click_login"
        android:text="Xem ảnh và chia sẽ lên "
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>